
pipeline {
  agent {
    docker { image 'node:latest' }
  }
  stages {
    stage('Install') {
      steps {
          sh 'ls && cd app && pwd && ls'
          sh 'npm install'
          sh 'npm install -g @angular/cli'
        }
    }

    // stage('Test') {
    //   parallel {
    //     stage('Static code analysis') {
    //         steps { sh 'npm run-script lint' }
    //     }
    //     stage('Unit tests') {
    //         steps { sh 'npm run-script test' }
    //     }
    //   }
    // }

    stage('Build') {
      steps { 
          sh 'ls && cd app && pwd && ls'
        //   sh 'node_modules/@angular/cli/bin/ng build'
          sh 'npm run build' 
        }
    }
  }
}