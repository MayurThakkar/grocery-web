pipeline {
  agent any
  stages {
    stage('Install & build') {
      agent {
        docker { image 'node:12.18.1' }
      }
      environment {
            HOME = '.'
      }
      steps {
            sh 'cd app && rm -rf package-lock.json && npm cache clean --force && npm install'
            echo 'Start Building'
            sh 'cd app && npm run ng build'
            sh 'pwd && ls'
        }
    }

    // stage('Test') {
    //   parallel {
    //     stage('Static code analysis') {
    //         steps { sh 'npm run-script lint' }
    //     }
    //     stage('Unit tests') {
    //         steps { sh 'npm run-script test' }
    //     }
    //   }
    // }

    stage('Docker build') {
      steps {
        echo 'Start docker build'
        sh 'cd app && docker build .'
      }
    }
  }
}