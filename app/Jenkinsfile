pipeline {
  agent {
    docker { image 'node:latest' }
  }
  stages {
    stage('Prepare Node and NPM') { // confirm nodejs plugin and setting
    steps {
          sh 'npm --version'
      } 
   }
    stage('Install') {
      steps {
            sh "rm -rf node_modules || true"
            sh 'cd app && npm cache clean --force && npm install'
        }
    }

    // stage('Test') {
    //   parallel {
    //     stage('Static code analysis') {
    //         steps { sh 'npm run-script lint' }
    //     }
    //     stage('Unit tests') {
    //         steps { sh 'npm run-script test' }
    //     }
    //   }
    // }

    stage('Build') {
      steps {
            echo 'Start Building'
            sh 'cd app && npm run ng build --prod' 
        }
    }
  }
}